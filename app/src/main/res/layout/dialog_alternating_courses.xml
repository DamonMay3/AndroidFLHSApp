            android:layout_below="@+id/red_separator2"
            android:layout_alignLeft="@+id/red_separator2"
            android:layout_alignStart="@+id/red_separator2"
            android:layout_alignRight="@+id/red_separator2"
            android:layout_alignEnd="@+id/red_separator2" />
        <TextView
