            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Which days do you have this course?"
            android:id="@+id/AltCourse2Question"
            android:layout_below="@id/secondAlternatingCourseName" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:id="@+id/AlternatingCourse2DaySpinner"
            android:layout_below="@+id/AltCourse2Question" />



