        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/vertspacing"
            android:background="@color/red"
            android:layout_centerHorizontal="true"
            android:id="@+id/red_separator"
            android:layout_margin="10sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/red_separator"
            android:inputType="textPersonName"
            android:text="1st Alternating Course Name"
            android:id="@+id/firstAlternatingCourseName"
            android:layout_alignRight="@+id/red_separator"
            android:layout_alignEnd="@+id/red_separator"
            android:layout_alignLeft="@+id/red_separator"
            android:layout_alignStart="@+id/red_separator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Which days do you have this course?"
            android:id="@+id/AltCourse1Question"
            android:layout_below="@+id/firstAlternatingCourseName" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:id="@+id/AlternatingCourse1DaySpinner"
            android:layout_below="@+id/AltCourse1Question" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/vertspacing"
            android:background="@color/red"
            android:layout_below="@id/AlternatingCourse1DaySpinner"
